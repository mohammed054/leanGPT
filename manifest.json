{
  "manifest_version": 3,
  "name": "LeanGPT - FINAL VERSION",
  "version": "0.1.0",
  "description": "ChatGPT Performance Optimizer - Optimization Levels Version",
  
  "permissions": ["activeTab", "storage"],
  
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://openai.com/*", "https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.svg",
    "default_title": "LeanGPT - ChatGPT Optimizer"
  },
  
  "icons": {
    "128": "icons/icon.svg"
  }
}
