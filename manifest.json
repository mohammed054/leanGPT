{
  "manifest_version": 3,
  "name": "LeanGPT",
  "version": "0.1.0",
  "description": "Optimize ChatGPT performance on low-end laptops by safely removing DOM elements and reducing rendering overhead",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "https://chat.openai.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "file://*/*test.html"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "icons": {
    "128": "icons/icon.svg"
  },
  
  "action": {
    "default_icon": "icons/icon.svg",
    "default_title": "LeanGPT - ChatGPT Performance Optimizer"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": ["https://chat.openai.com/*"]
    }
  ]
}